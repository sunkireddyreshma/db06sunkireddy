extends layout
block content
 h1= title
 if (toShow == null)
  h2 No instance to delete
 else
  - let horseid = toShow._id
  - let horseName = toShow.Name
  - let horseCost = toShow.Cost
  - let horseWeight = toShow.Weight
  - let actionid = "/resource/resource/horses/" + horseid
  script let actionid = "#{actionid}"
  div
    div.row
      div(class='horseAttr mr-3') horse ID is:
      div #{horseid}
    div.row
      div(class='horseAttr mr-3') horse Name is:
      div #{horseName}
    div.row
      div(class='horseAttr mr-3') horse Cost is:
      div #{horseCost}
    div.row
      div(class='horseAttr mr-3') horse Weight is:
      div #{horseWeight}
  button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete
  button(class="btn btn-secondary m-2" onclick="cancel()") Cancel
  script.
   function cancel() {
   // Go back to the home page for the horse collection
   window.location.href='resource/resource/horses'
   }
  script.
   function deleteOnid() {
    console.log("starting delete")
    // delete first
    fetch(actionid, {
    method: 'DELETE' //Don't need a body for the delete
    }).then((resp) => {
    return resp.json(); // or resp.text() or whatever the server sends
    }).then((body) => {
    alert("Delete succeded")
    window.location.href='resource/resource/horses'
    // TODO handle body
    }).catch((error) => {
    // TODO handle error
    alert("Delete failed " + error )
    });
   }